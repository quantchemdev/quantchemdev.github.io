description: Website for the Quantum Chemistry Development Group at DIPC
author:
  name: Quantum Chemistry Development Group
  email: quantchemdev@gmail.com
  url: "https://quantchemdev.github.io"
  baseurl: "/"

# Social media and repository links
github: https://github.com/quantchemdev
twitter: https://twitter.com/DonostiaChemDev

# Build settings
markdown: kramdown

# Collections (keep but simplified)
collections:
  members:
    output: true
    permalink: /members/:path/
  publications:
    output: true
    permalink: /publications/:path/

# Basic plugins
plugins:
  - jekyll-sitemap

# Simple defaults - just two layouts!
defaults:
  - scope:
      path: "index.html"
    values:
      layout: "landing"
  - scope:
      path: ""
    values:
      layout: "main"

# SCSS Configuration for new architecture
sass:
  sass_dir: _sass
  style: expanded  # Use expanded for development, compressed for production
  sourcemap: true  # Enable source maps for debugging

# Exclude SCSS partials from being processed as individual files
exclude:
  - _sass/
  - "*.scss"
